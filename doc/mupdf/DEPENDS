depends JPEG &&
depends openjpeg &&
depends freetype2 &&
depends harfbuzz &&
depends jbig2dec &&
depends zlib &&
depends libxext &&
depends libx11 &&

optional_depends SSL \
                 "HAVE_OPENSSL=yes" \
                 "HAVE_OPENSSL=no" \
                 "for signature support" &&

optional_depends curl \
                 "HAVE_CURL=yes" \
                 "HAVE_CURL=no" \
                 "for progressive loading support" &&

optional_depends OPENGL \
                 "HAVE_GLFW=yes" \
                 "HAVE_GLFW=no" \
                 "for OpenGL-based viewer" &&

if is_depends_enabled ${SPELL} $(get_spell_provider ${SPELL} OPENGL); then
  depends GLUT &&
  depends glfw
fi
